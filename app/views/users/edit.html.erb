<h1>Edit User</h1>

<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
  </ol>
<% end %>

<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>

  <%= f.label :email %>
  <%= f.email_field :email, :required => true %>

  <%= f.label :bio %>
  <%= f.text_field :bio %>

  <%= f.label :avatar %>
  <%= f.url_field :avatar %>

  <%= f.submit %>

<% end %>
