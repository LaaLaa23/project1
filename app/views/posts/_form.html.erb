<%= form_for(@post, :html => {:multipart => true}) do |f| %>
  <%if @post.errors.any?%>
  <% @post.errors.full_messages.each do |msg| %>
  <div class="alert alert-danger"><%= msg %></div>
  <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :required => true, :class => 'form-control', :autofocus => true %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, :required => true, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, :required => true, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image_url %>
    <%= f.cl_image_upload :image, :class => 'form-control' %>
  </div>

  <%= f.submit :class => 'btn btn-primary' %>

<% end %>
